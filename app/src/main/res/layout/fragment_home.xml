<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--Connected and disconned was here above imageview-->

    <ImageView
        android:id="@+id/mycurrentLoc"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:src="@drawable/ic_current"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ride_requestHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/request_accept_reject_layout" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ontheWayHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/on_the_way" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_start_journy_driver_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <com.apps.freeroadingdriver.customviews.TypeFaceButton
            android:id="@+id/btn_edt_journy"
            style="@style/yellowButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight=".5"
            android:text="@string/edit_journey" />

        <com.apps.freeroadingdriver.customviews.TypeFaceButton
            android:id="@+id/btn_begin_journy"
            style="@style/blackButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight=".5"
            android:text="@string/begin_journey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_drop_journy_driver_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <com.apps.freeroadingdriver.customviews.TypeFaceButton
            android:id="@+id/btn_dropedit_journy"
            style="@style/yellowButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight=".5"
            android:text="@string/edit_journey"
            android:textSize="@dimen/_11ssp" />

        <com.apps.freeroadingdriver.customviews.TypeFaceButton
            android:id="@+id/btn_drop_journy"
            style="@style/blackButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight=".5"
            android:text="@string/passenger_dropped"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </androidx.recyclerview.widget.RecyclerView>

    <com.apps.freeroadingdriver.customviews.TypeFaceTextview
        android:id="@+id/stripe_message_tv"
        style="@style/whitesmallTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/offwhite"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="@string/stripe_message_txt"
        android:visibility="gone" />

    <include layout="@layout/progress_bar_layout" />
</RelativeLayout>
