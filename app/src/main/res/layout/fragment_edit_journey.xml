<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_square">


    <com.apps.freeroadingdriver.customviews.TypeFaceTextview
        android:id="@+id/tv_waiting_time"
        style="@style/whitesmallTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:text="@string/waiting_time"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerHorizontal="true"/>


    <com.apps.freeroadingdriver.customviews.TypeFaceTextview
        android:id="@+id/tv_timer"
        style="@style/headingTextviewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        android:text="00:00:00"
        android:textSize="@dimen/_35ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_centerInParent="true"
        android:background="@color/crop__button_bar"
        android:alpha="0.8">

        <ImageView
            android:id="@+id/btn_stop_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/stop"/>

        <ImageView
            android:id="@+id/btn_resume_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/pause"/>


    </RelativeLayout>

    <com.apps.freeroadingdriver.customviews.TypeFaceButton
        android:id="@+id/changeDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/blackButton"
        android:text="@string/change_destination"
        android:padding="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_60sdp"/>

</RelativeLayout>
