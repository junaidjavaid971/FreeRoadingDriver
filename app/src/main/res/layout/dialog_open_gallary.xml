<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    >
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentTop="true"
        android:background="@color/titlebarcolor"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_media"
            style="@style/whiteHeadingTextviewStyle"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/delete" />
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/deactivate_text_color"
            android:layout_alignParentBottom="true">
        </View>-->
    </RelativeLayout>
    <View
        android:id="@+id/dialog_view"
        android:layout_below="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/titlebarcolor" />
    <LinearLayout
        android:layout_below="@+id/dialog_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:orientation="horizontal"
        android:id="@+id/l1">
        <RelativeLayout
            android:id="@+id/cam_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/ic_camera"
                android:text="@string/camera"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                />
        </RelativeLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:background="@color/titlebarcolor"
            >
        </View>
        <RelativeLayout
            android:id="@+id/gal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_weight="100"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="false"
                android:textColor="@color/colorBlack"
                android:drawableTop="@drawable/ic_gallery"
                android:text="@string/gallery"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>