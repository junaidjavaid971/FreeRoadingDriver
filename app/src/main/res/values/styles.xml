<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="pageBackground">@style/bg_white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textViewStyle">@font/aristapro</item>
        <item name="buttonStyle">@font/aristapro</item>
    </style>
    <style name="bg_white">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert" tools:targetApi="lollipop">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="yellowButton">
        <item name="android:background">@drawable/yellow_button</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="blackButton">
        <item name="android:background">@drawable/black_button</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="headingTextviewStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="regularblackTextviewStyle">
        <item name="android:textColor">@color/menuandtextheading</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="whiteHeadingTextviewStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="menuitemTextView">
        <item name="fontFamily">@font/aristapro</item>
    </style>

    <style name="regularTextviewStyle">
        <item name="android:textColor">@color/placeholderText</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="CircularProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_75sdp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:background">@drawable/round_corner_primary_color_bg</item>
    </style>

    <style name="ProgressBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_acvtivity</item>
        <item name="android:windowExitAnimation">@anim/slide_down_acvtivity</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/menuandtextheading</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="checkBox_Selector" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_btn_radio</item>
    </style>

    <style name="editTextRegular">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/placeholderText</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="backgroundLesseditTextRegular">
        <item name="android:textColor">@color/menuandtextheading</item>
        <item name="android:textColorHint">@color/menuandtextheading</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="verysmallTextview">
        <item name="android:textColor">@color/menuandtextheading</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="veryverysmallTextview">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="whitesmallTextview">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_13ssp</item>

    </style>

    <style name="smallregularTextviewStyle">
        <item name="android:textColor">@color/placeholderText</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>



    <style name="redButton">
        <item name="android:background">@drawable/red_button</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_font</item>
    </style>

    <dimen name="text_20sp">20sp</dimen>
</resources>
